@import "normalize.styl"

/***********COLORS****************/
main_color = #F2F0DF
menu_color = #222
item_color = #FCB95B
item_hover = #F5DFCE

/***********BODY******************/
body
	//background-color: main_color
	font-family Helvetica, Verdana, Arial
	font-size 16px
	height 100%
	width 100%
figure
	margin 0
	padding 40px 0 40px 0
	
/**********MENU******************/
.menu_container
	background-color menu_color
	height 100%
	position fixed
	text-align center
	width 200px
	.menu
		border-top solid 1px #444
		border-bottom solid 1px #444
		margin 0
		padding 40px 0 40px 0
		.item
			list-style none
			margin 0
			padding 10px
			a
				color item_color
				text-decoration none
				transition 0.3s all
				&:hover
					color item_hover
					
.main_container
	display none